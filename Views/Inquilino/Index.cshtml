@model IEnumerable<Inmobiliaria_.Net_Core.Models.Inquilino>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 text-success">Lista de Inquilinos</h2>
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-person-plus"></i> Nuevo Inquilino
        </a>
    </div>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-success">@ViewBag.Mensaje</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-success">
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>DNI</th>
                        <th>Teléfono</th>
                        <th>Dirección</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdInquilino</td>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td>@item.Dni</td>
                            <td>@item.Telefono</td>
                            <td>@item.Direccion</td>
                            <td class="text-center">
                                <a class="btn btn-info btn-sm me-1" asp-action="Details" asp-route-id="@item.IdInquilino" title="Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a class="btn btn-warning btn-sm me-1" asp-action="Edit" asp-route-id="@item.IdInquilino" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdInquilino" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>