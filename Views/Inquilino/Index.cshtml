@model IEnumerable<Inmobiliaria_.Net_Core.Models.Inquilino>

<h2>Lista de Inquilinos</h2>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">@ViewBag.Mensaje</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdInquilino</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Dni</td>
                <td>@item.Telefono</td>
                <td>@item.Direccion</td>
                <td>
                    <a class="btn btn-info" href="@Url.Action("Details", new { id = item.IdInquilino })">Detalles</a>
                    <a class="btn btn-warning" href="@Url.Action("Edit", new { id = item.IdInquilino })">Editar</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.IdInquilino })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("Create")">Agregar Nuevo Inquilino</a>