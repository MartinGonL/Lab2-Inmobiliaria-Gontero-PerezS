@model IEnumerable<Inmobiliaria_.Net_Core.Models.Pago>

@{
    ViewData["Title"] = "Listado de Pagos";
}

<h2>Listado de Pagos</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Registrar Nuevo Pago</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Contrato</th>
            <th>Fecha</th>
            <th>Monto</th>
            <th>Mes</th>
            <th>AÃ±o</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdPago</td>
                <td>@item.Contrato?</td>
                <td>@item.FechaPago.ToShortDateString()</td>
                <td>@item.MontoPagado</td>
                <td>@item.MesCorrespondiente</td>
                <td>@item.AnioCorrespondiente</td>
                <td>@item.Estado</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.IdPago">Detalles</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.IdPago">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdPago">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
