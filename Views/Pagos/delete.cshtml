@model Inmobiliaria_.Net_Core.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<h2>¿Estás seguro de eliminar este pago?</h2>

<div>
    <h4>Pago @Model.IdPago</h4>
    <dl class="row">
        <dt class="col-sm-2">Contrato</dt>
        <dd class="col-sm-10">@Model.Contrato?</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.FechaPago.ToShortDateString()</dd>

        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">@Model.MontoPagado</dd>

        <dt class="col-sm-2">Mes</dt>
        <dd class="col-sm-10">@Model.MesCorrespondiente</dd>

        <dt class="col-sm-2">Año</dt>
        <dd class="col-sm-10">@Model.AnioCorrespondiente</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdPago" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
