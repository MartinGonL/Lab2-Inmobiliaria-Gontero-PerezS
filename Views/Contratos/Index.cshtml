@model IEnumerable<Inmobiliaria_.Net_Core.Models.Contrato>

<h2>Lista de Contratos</h2>

<table class="table">
    <thead>
        <tr>
            <th>CÃ³digo</th>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>Monto Mensual</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdContrato</td>
                <td>@item.IdInquilino</td>
                <td>@item.IdInmueble</td>
                <td>@item.MontoMensual</td>
                <td>@item.FechaInicio.ToString("yyyy-MM-dd")</td>
                <td>@item.FechaFin.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdContrato">Detalles</a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdContrato">Editar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdContrato">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Create">Agregar Nuevo Contrato</a>