@model IEnumerable<Inmobiliaria_.Net_Core.Models.Contrato>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Lista de Contratos</h2>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Nuevo Contrato
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">CÃ³digo</th>
                        <th scope="col">Inquilino</th>
                        <th scope="col">Inmueble</th>
                        <th scope="col">Monto Mensual</th>
                        <th scope="col">Fecha Inicio</th>
                        <th scope="col">Fecha Fin</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdContrato</td>
                            <td>@item.IdInquilino</td>
                            <td>@item.IdInmueble</td>
                            <td>@item.MontoMensual.ToString("C")</td>
                            <td>@item.FechaInicio.ToString("yyyy-MM-dd")</td>
                            <td>@item.FechaFin.ToString("yyyy-MM-dd")</td>
                            <td class="text-center">
                                <a class="btn btn-info btn-sm me-1" asp-action="Details" asp-route-id="@item.IdContrato" title="Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a class="btn btn-warning btn-sm me-1" asp-action="Edit" asp-route-id="@item.IdContrato" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdContrato" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>