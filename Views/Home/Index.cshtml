@{
    ViewData["Title"] = "Inicio";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold text-gradient bg-gradient text-primary mb-3 animate__animated animate__fadeInDown">
            Bienvenido a Inmobiliaria MyS
        </h1>
        <p class="lead text-secondary animate__animated animate__fadeInUp">
            Gestione propietarios, inquilinos e inmuebles de manera eficiente.
        </p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 justify-content-center">
        <div class="col">
            <div class="card h-100 shadow-lg border-primary animate__animated animate__fadeIn">
                <div class="card-body text-center">
                    <span class="display-4 text-primary mb-2"><i class="bi bi-person-badge"></i></span>
                    <h5 class="card-title text-primary fw-bold">Propietarios</h5>
                    <p class="card-text">Administre los propietarios registrados en el sistema.</p>
                    <a class="btn btn-primary w-100 mt-2" asp-controller="Propietarios" asp-action="Index">
                        <i class="bi bi-arrow-right-circle"></i> Ir a Propietarios
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-lg border-success animate__animated animate__fadeIn">
                <div class="card-body text-center">
                    <span class="display-4 text-success mb-2"><i class="bi bi-person-lines-fill"></i></span>
                    <h5 class="card-title text-success fw-bold">Inquilinos</h5>
                    <p class="card-text">Gestione los inquilinos y sus datos personales.</p>
                    <a class="btn btn-success w-100 mt-2" asp-controller="Inquilino" asp-action="Index">
                        <i class="bi bi-arrow-right-circle"></i> Ir a Inquilinos
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-lg border-info animate__animated animate__fadeIn">
                <div class="card-body text-center">
                    <span class="display-4 text-info mb-2"><i class="bi bi-house-door"></i></span>
                    <h5 class="card-title text-info fw-bold">Inmuebles</h5>
                    <p class="card-text">Gestione los inmuebles disponibles y sus características.</p>
                    <a class="btn btn-info w-100 mt-2" asp-controller="Inmuebles" asp-action="Index">
                        <i class="bi bi-arrow-right-circle"></i> Ir a Inmuebles
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-lg border-warning animate__animated animate__fadeIn">
                <div class="card-body text-center">
                    <span class="display-4 text-warning mb-2"><i class="bi bi-file-earmark-text"></i></span>
                    <h5 class="card-title text-warning fw-bold">Contratos</h5>
                    <p class="card-text">Gestione los contratos de alquiler y sus detalles.</p>
                    <a class="btn btn-warning w-100 mt-2" asp-controller="Contratos" asp-action="Index">
                        <i class="bi bi-arrow-right-circle"></i> Ir a Contratos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
