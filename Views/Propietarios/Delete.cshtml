@model Inmobiliaria_.Net_Core.Models.Propietario

@{
    ViewData["Title"] = "Eliminar";
}

<h2>Eliminar Propietario</h2>

<p>¿Está seguro de que desea eliminar este propietario?</p>

<dl class="row">
    <dt class="col-sm-2">Código</dt>
    <dd class="col-sm-10">@Model.IdPropietario</dd>

    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Apellido</dt>
    <dd class="col-sm-10">@Model.Apellido</dd>

    <dt class="col-sm-2">DNI</dt>
    <dd class="col-sm-10">@Model.Dni</dd>

    <dt class="col-sm-2">Teléfono</dt>
    <dd class="col-sm-10">@Model.Telefono</dd>

    <dt class="col-sm-2">Dirección</dt>
    <dd class="col-sm-10">@Model.Direccion</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" name="IdPropietario" value="@Model.IdPropietario" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancelar</a>
</form>
