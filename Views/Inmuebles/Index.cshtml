@model IEnumerable<Inmobiliaria_.Net_Core.Models.Inmueble>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 text-info">Lista de Inmuebles</h2>
        <a class="btn btn-info" asp-action="Create">
            <i class="bi bi-house-add"></i> Nuevo Inmueble
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-info">
                    <tr>
                        <th>Código</th>
                        <th>Propietario</th>
                        <th>Dirección</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdInmueble</td>
                            <td>@item.Propietario?.Nombre @item.Propietario?.Apellido</td>
                            <td>@item.Direccion</td>
                            <td>@item.Tipo</td>
                            <td>@item.Estado</td>
                            <td class="text-center">
                                <a class="btn btn-info btn-sm me-1" asp-action="Details" asp-route-id="@item.IdInmueble" title="Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a class="btn btn-warning btn-sm me-1" asp-action="Edit" asp-route-id="@item.IdInmueble" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdInmueble" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>