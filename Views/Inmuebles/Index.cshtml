@model IEnumerable<Inmobiliaria_.Net_Core.Models.Inmueble>

<h2>Lista de Inmuebles</h2>

<table class="table">
    <thead>
        <tr>
            <th>Código</th>
            <th>Propietario</th>
            <th>Dirección</th>
            <th>Tipo</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdInmueble</td>
                <td>@item.Propietario.Nombre @item.Propietario.Apellido</td>
                <td>@item.Direccion</td>
                <td>@item.Tipo</td>
                <td>@item.Estado</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdInmueble">Detalles</a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdInmueble">Editar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdInmueble">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Create">Agregar Nuevo Inmueble</a>